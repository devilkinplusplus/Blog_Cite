@model EntityLayer.Concreate.WriterWithPP

<!DOCTYPE html>
<html lang="en">
<head>
    <!-- Required meta tags-->
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="Colorlib Templates">
    <meta name="author" content="Colorlib">
    <meta name="keywords" content="Colorlib Templates">

    <!-- Title Page-->
    <title>Register</title>

    <!-- CSS only -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous">

    <!-- Font special for pages-->
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,300i,400,400i,600,600i,700,700i,800,800i" rel="stylesheet">

    <!-- Main CSS-->
    <link href="~/register/css/main.css" rel="stylesheet" media="all">
</head>

<body>
    <div class="page-wrapper bg-dark p-t-100 p-b-50">
        <div class="wrapper wrapper--w900">
            <div class="card card-6">
                <div class="card-heading">
                    <h2 class="title">Qeydiyyat</h2>
                </div>
                <div class="card-body">
                    <form method="post" action="/Login/Register/Index"
                          enctype="multipart/form-data">
                        <div class="form-row">
                            <div class="name">Adınız</div>
                            <div class="value">
                                <input class="input--style-6" type="text" 
                                name="WriterName" autocomplete="off">
                                @Html.ValidationMessageFor(x=>x.WriterName,"",
                                new {@class="text-danger"})
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="name">Mail adresiniz</div>
                            <div class="value">
                                <div class="input-group">
                                    <input class="input--style-6" autocomplete="off"
                                           type="email" name="WriterMail">
                                    @Html.ValidationMessageFor(x=>x.WriterMail,"",
                                    new {@class="text-danger"})
                                </div>
                            </div>
                        </div>

                        <div class="form-row">
                            <div class="name">Şifrəniz</div>
                            <div class="value">
                                <input class="input--style-6" type="password" name="WriterPassword">
                                @Html.ValidationMessageFor(x=>x.WriterPassword,"",
                                new {@class="text-danger"})
                            </div>
                        </div>

                        <div class="form-row">
                            <div class="name">Şifrənizi təsdiqləyin</div>
                            <div class="value">
                                <input class="input--style-6" type="password"
                                       name="WriterConfirmPassword">
                                @Html.ValidationMessageFor(x=>x.WriterConfirmPassword,"",
                                new {@class="text-danger"})
                            </div>
                        </div>

                        <div class="form-row">
                            <div class="name">Haqqınızda</div>
                            <div class="value">
                                <div class="input-group">
                                    <textarea class="textarea--style-6" autocomplete="off"
                                    name="WriterAbout" placeholder="..."></textarea>
                                </div>
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="name">Profil Şəkli</div>
                            <div class="value">
                                <div class="input-group js-input-file">
                                    <input class="input-file" type="file"
                                           name="WriterImage" id="file">
                                    <label class="label--file" for="file">Fayl seç</label>
                                    <span class="input-file__info">Seçilen fayl..</span>
                                </div>
                            </div>
                        </div>
                        <div class="card-footer">
                            <button class="btn btn--radius-2 btn--blue-2" type="submit">
                                Qeydiyyatdan Keç
                            </button>
                            <br /><br />
                            <div style="text-align:left;">
                                <h6><a href="/Login/Login/Index" 
                                    class="btn btn-info">Hesabınız var ?</a></h6>
                            </div>
                        </div>
                    </form>
                </div>

            </div>
        </div>
    </div>

    <!-- Jquery JS-->
    <script src="~/register/vendor/jquery/jquery.min.js"></script>


    <!-- Main JS-->
    <script src="~/register/js/global.js"></script>

</body><!-- This templates was made by Colorlib (https://colorlib.com) -->

</html>
<!-- end document-->