@model IEnumerable<EntityLayer.Concreate.Blog>
@{
    Layout = "~/Areas/Blog/Views/Shared/_BlogLayout.cshtml";
}

<link rel="stylesheet" href="~/webBlog/css/single.css">

<section class="banner-bottom">
    <!--/blog-->
    <div class="container">
        <div class="row">
            <!--left-->
            <div class="col-lg-8 left-blog-info-w3layouts-agileits text-left">
                @foreach (var item in Model)
                {
                    <div class="blog-grid-top">
                        <div class="b-grid-top">
                            <div class="blog_info_left_grid">
                                <a href="single.html">
                                    <img src="/BlogImage/@item.BlogImage"
                                     class="img-fluid" alt=""
                                     style="height:400px;width:720px">
                                </a>
                            </div>
                            <div class="blog-info-middle">
                                <ul>
                                    <li>
                                        <a href="#">
                                            <i class="far fa-calendar-alt"></i>
                                            @item.BlogCreateDate.ToString("dd-MMM-yyyy")
                                        </a>
                                    </li>
                                    <li class="mx-2">
                                        <a href="#">
                                            @item.Category.CategoryName
                                        </a>
                                    </li>
                                    <li>
                                        <a href="#">
                                            <i class="far fa-comment"></i> 0 Şərh
                                        </a>
                                    </li>
                                </ul>
                            </div>
                        </div>
                        <h3>
                            <a href="single.html">
                                @item.BlogTitle
                            </a>
                        </h3>
                        <p>
                            @item.BlogContent
                        </p>
                    </div>
                }

                @await Component.InvokeAsync("CommentsByBlog",new {id=@ViewBag.bl})
                @await Html.PartialAsync("~/Areas/Blog/Views/Comment/AddComment.cshtml")
            </div>

            <!--//left-->
            <!--right-->
            <aside class="col-lg-4 agileits-w3ls-right-blog-con text-right">
                <div class="right-blog-info text-left">
                    <!--Sign up to our newsletter-->
                    <div class="tech-btm">
                        <img src="~/webBlog/images/banner1.jpg" class="img-fluid" alt="">
                    </div>
                    <div class="tech-btm">
                        <h4>Yeniliklərdən xəbərdar olun</h4>
                        @await Html.PartialAsync("~/Areas/Blog/Views/Subs/Subscribe.cshtml")
                    </div>
                    @await Component.InvokeAsync("GetCategories")

                    @await Component.InvokeAsync("OtherBlogsOfWriter",new {id=@ViewBag.on})


                </div>

            </aside>
            <!--//right-->
        </div>
    </div>
</section>

