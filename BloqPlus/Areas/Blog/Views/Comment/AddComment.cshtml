<div class="comment-top">
    <h4>Şərh yazın</h4>
    <div class="comment-bottom">
        <form method="post">
            <textarea id="txt" class="form-control" name="CommentContent"
                      placeholder="Şərhiniz..." required="">
            </textarea>

            <button type="submit" id="btn" class="btn btn-primary submit">
                Göndər
            </button>
        </form>
    </div>
</div>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"
        type="text/javascript">
</script>

<script type="text/javascript">
    $("#btn").click(function(){
        var id = @ViewBag.bl;
        let values = {
            CommentContent: $("#txt").val()
            //BlogID:$("#blgid").val()
        };
        $.ajax({
            type:"post",
            url:"/Blog/Comment/AddComment/"+id,
            data:values,
            succes:function(func){
                let result = jQuery.parseJSON(func)
            }
        })
    })
</script>

