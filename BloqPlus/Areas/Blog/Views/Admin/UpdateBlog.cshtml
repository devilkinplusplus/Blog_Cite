@model EntityLayer.Concreate.Blog

@{
    Layout = "~/Areas/Blog/Views/Shared/_AdminLayout_.cshtml";
}

<div class="xs">
    <div class="well1 white">
        @using (Html.BeginForm("UpdateBlog", "Admin", FormMethod.Post,
        new { @enctype = "multipart/form-data" }))
        {
            <fieldset>
                @Html.HiddenFor(x=>x.BlogID)
                <div class="form-group">
                    <label class="control-label">Başlıq</label>
                    @Html.TextBoxFor(x=>x.BlogTitle,new {@class="form-control1"})
                </div>
                <div class="form-group">
                    <label class="control-label">Kateqoriya</label>
                    @Html.DropDownListFor(x=>x.CategoryID,
                (List<SelectListItem>)ViewBag.v,new {@class="form-control1" })
                </div>

                <div class="form-group">
                    <label class="control-label">Şəkil</label>
                    <div class="blog_info_left_grid">
                        <img src="/BlogImage/@ViewData["img"]"
                         height=100 width=100 class="img-fluid" alt="">
                    </div>
                    <input class="form-control" type="file" name="BlogImage"
                       value="/BlogImage/@ViewData["img"]" />
                </div>
                <div class="form-group">
                    <label class="control-label">Başlıq</label>
                    @Html.TextAreaFor(x=>x.BlogContent,4,20,
                new {@class="form-control1" , autocomplete="off"})
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary">Yadda Saxla</button>
                </div>
            </fieldset>
        }
    </div>
</div>

