@model IEnumerable<EntityLayer.Concreate.Comment>
<div class="comment-top">
    <h4>Şərhlər</h4>
    @if (Model.Count() == 0)
    {
        <div class="media-body">
            <p>
                Şərh yoxdur , ilk şərh sizdən olsun
            </p>
        </div>
    }
    else
    {
        @foreach (var item in Model)
        {
            <div class="media">
                <img src="~/ProfilPictures/@item.Writer.WriterImage"
             style="height:85px;width:85px;"
             alt="" class="img-fluid" />
                <div class="media-body">
                    <h5 class="mt-0">@item.Writer.WriterName</h5>
                    <p>
                        @item.CommentContent
                    </p>

                </div>
            </div>
        }
    }
</div>