@model List<EntityLayer.Concreate.Message>
@{
    ViewData["Title"] = "Sent";
    Layout = "~/Areas/Blog/Views/Shared/_AdminLayout_.cshtml";
}
@if (Model.Count() != 0)
{
    @foreach (var item in Model)
    {
        <div class="media">
            <div class="media-left">
                <a href="#">
                    <img class="media-object" alt="64x64"
                 src="~/ProfilPictures/@item.ReceiverUser.WriterImage"
                 style="width: 64px; height: 64px;">
                </a>
            </div>
            <div class="media-body">
                <h4 class="media-heading">@item.ReceiverUser.WriterName</h4>
                @item.MessageContent
            </div>
            <div class="clearfix"> </div>
        </div>
    }
}
else
{
    <h2> Heç bir mesaj göndərməyibsiniz <i class="fa fa-meh-o"></i></h2>
}

